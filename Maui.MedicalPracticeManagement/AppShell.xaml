<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.MedicalPracticeManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.MedicalPracticeManagement"
    xmlns:view="clr-namespace:Maui.MedicalPracticeManagement.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui.MedicalPracticeManagement">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate view:PatientView}"
        Route="Patient" />

</Shell>
