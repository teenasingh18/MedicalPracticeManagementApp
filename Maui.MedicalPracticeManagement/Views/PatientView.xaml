<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalPracticeManagement.Views.PatientView"
             Title="PatientView"
             NavigatedTo="ContentPage_NavigatedTo">
    
    <VerticalStackLayout>
        <Label Text="Name" />
        <Entry Text="{Binding name}"/>
        <Label Text="Address" />
        <Entry Text="{Binding address}" />
        <Label Text="Birthdate"/>
        <DatePicker Date="{Binding birthdate}"/>
        <Label Text="Race"/>
        <Entry Text="{Binding race}"/>
        <Label Text="Gender"/>
        <Entry Text="{Binding gender}"/>
        <Label Text="Medical Notes"/>
        <Entry Text="{Binding medicalNotes}"/>
        <Label Text="Prescriptions"/>
        <Entry Text="{Binding prescriptions}"/>

        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
        
    </VerticalStackLayout>
</ContentPage>