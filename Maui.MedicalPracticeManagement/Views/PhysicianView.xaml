<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalPracticeManagement.Views.PhysicianView"
             Title="PhysicianView"
             NavigatedTo="ContentPage_NavigatedTo">

    <VerticalStackLayout>
        <Label Text="Name" />
        <Entry Text="{Binding name}"/>
        <Label Text="License Number"/>
        <Entry Text="{Binding licenseNumber}"/>
        <Label Text="Graduation Date"/>
        <DatePicker Date ="{Binding gradDate}"/>
        <Label Text="Specializations"/>
        <Entry Text="{Binding specializations}"/>

        <Button Text="Ok" Clicked="OkPhysicianClicked"/>
        <Button Text="Cancel" Clicked="CancelPhysicianClicked"/>

    </VerticalStackLayout>
</ContentPage>
